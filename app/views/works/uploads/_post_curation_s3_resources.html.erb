<section class="files-section">
  <div class="lux">
    <div class="card">
      <div class="files card-body">
        <h3 class="h3"><%= t('works.uploads.post_curation.s3_resources.heading') %></h3>
        <!-- Only render file download table if there are files in S3 -->
        <% if @work.post_curation_s3_resources.empty? %>
          <p><%= t('works.form.post_curation_uploads.empty') %></p>
        <% else %>
          <table id="files-table" class="table">
            <thead>
              <tr>
                <th scope="col" nowrap="nowrap"><span><%= t('works.form.post_curation_uploads.filename') %></span></th>
                <th scope="col"><span><%= t('works.form.post_curation_uploads.created_at') %></span></th>
                <th scope="col"><span><%= t('works.form.post_curation_uploads.size') %></span></th>
              </tr>
            </thead>
            <tbody>
              <% @work.post_curation_s3_resources.each_with_index do |file, ix| %>
                <tr class="files">
                  <td>
                    <span>
                      <i class="bi bi-file-arrow-down"></i>
                      <a href="<%= file.filename %>" class="documents-file-link" target="_blank" title="<%= file.filename %>"><%= file.filename.to_s %></a>
                    </span>
                  </td>
                  <td>
                    <span><%= file.last_modified %></span>
                  </td>
                  <td>
                    <span>
                      <span><%= number_to_human_size(file.size) %></span>
                    </span>
                  </td>
                </tr>

              <% end %>
            </tbody>
            <tfoot></tfoot>
          </table>
        <% end %>
        <!-- End of file download table -->
      </div>
    </div>
  </div>
</section>
