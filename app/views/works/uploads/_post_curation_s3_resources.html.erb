<section class="files-section">
  <div class="lux">
    <div class="card">
      <div class="files card-body">
        <!-- Only render file download table if there are files in S3 -->
        <table id="files-table" class="table">
          <thead>
            <tr>
              <th scope="col" nowrap="nowrap"><span><%= t('works.form.post_curation_uploads.filename') %></span></th>
              <th scope="col"><span><%= t('works.form.post_curation_uploads.created_at') %></span></th>
            </tr>
          </thead>
          <tbody>
            <% if @work.uploads.empty? %>
              <tr class="files">
                <td><span><%= t('works.form.post_curation_uploads.empty') %></span></td>
                <td><span></span></td>
              </tr>
              <% else %>
                <% @work.post_curation_uploads.each_with_index do |file, ix| %>
                <tr class="files">
                  <td>
                    <span>
                      <i class="bi bi-file-arrow-down"></i>
                      <a href="<%= file.url %>" class="documents-file-link" target="_blank" title="<%= file.filename %>"><%= post_curation_uploads_file_name(file: file) %></a>
                    </span>
                  </td>
                  <td>
                    <span><%= file.last_modified %></span>
                  </td>
                </tr>
                <% end %>
              <% end %>
            </tr>
          </tbody>
          <tfoot></tfoot>
        </table>
        <!-- End of file download table -->
      </div>
    </div>
  </div>
</section>
