<!-- Funding section -->
<details><summary>Funding Reference</summary>
  <ul>
    <li>Funder Name: The name of the funder. (Example: National Science Foundation)</li>
    <li>Award Number: The grant number or funding code for your award</li>
    <li>Award URI: The URL web address for your award</li>
  </ul>
</details>


<table>
  <thead>
    <tr>
      <th>Funder Name</th>
      <th>Award Number</th>
      <th>Award URI</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<% @work.resource.funders.each_with_index do |funder, i| %>
  <span class="hidden funder-data"
    data-num="<%= i + 1 %>"
    data-funder-name="<%= funder.funder_name %>"
    data-award-number="<%= funder.award_number %>"
    data-award-uri="<%= funder.award_uri %>"
    data-sequence="<%= funder.sequence || 0 %>">
  </span>
<% end %>

<!-- Let the user add new funders -->
<div>
  <%= link_to "Add Another Funder", "#", id: "btn-add-funder", class: "btn btn-secondary" %>
</div>

