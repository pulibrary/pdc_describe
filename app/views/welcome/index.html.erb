<% if current_user %>
  <div class="content">
    <h2>Welcome, <%= current_user.display_name %></h2>
    <%= link_to "My Dashboard", user_path(current_user), class: "btn btn-primary" %>
  </div>
<% else %>
  <div>
    <p>Welcome to PDC Describe, please login to view or create new datasets</p>
    <%= button_to "Login", user_cas_omniauth_authorize_path, class: "btn btn-primary" %>
  </div>
<% end %>
